<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/favorites_image_group_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/favorites_text_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.KeyVal.24"
        app:layout_constraintTop_toTopOf="@id/favorites_image_group_icon"
        app:layout_constraintStart_toEndOf="@id/favorites_image_group_icon" />

    <TextView
        android:id="@+id/favorites_text_verification_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.KeyVal.16"
        app:layout_constraintTop_toBottomOf="@id/favorites_text_group"
        app:layout_constraintStart_toStartOf="@id/favorites_text_group"/>


</androidx.constraintlayout.widget.ConstraintLayout>