<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/account_image_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/account_text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAppearance="@style/TextAppearance.KeyVal.24"
        app:layout_constraintTop_toTopOf="@id/account_image_icon"
        app:layout_constraintStart_toEndOf="@id/account_image_icon" />

    <TextView
        android:id="@+id/account_text_last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.KeyVal.16"
        app:layout_constraintTop_toBottomOf="@id/account_text_name"
        app:layout_constraintStart_toStartOf="@id/account_text_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>